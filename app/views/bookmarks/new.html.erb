<div class="container">
  <h1>Add a movie to bookmark of <%= @list.name %></h1>
  <%= simple_form_for([@list, @bookmark]) do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit "Add", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Back", lists_path, class: "btn btn-secondary" %>
</div>
